@{
    ViewData["Title"] = "Error";
}

<div class="text-center py-5">
    <div class="mb-4">
        @if (ViewBag.StatusCode != null)
        {
            <h1 class="display-1 fw-bold text-danger">@ViewBag.StatusCode</h1>
        }
        else
        {
            <h1 class="display-4 fw-bold text-danger">Oops!</h1>
        }
    </div>

    <h2 class="mb-3">
        @if (ViewBag.ErrorMessage != null)
        {
            @ViewBag.ErrorMessage
        }
        else
        {
            <text>An error occurred while processing your request.</text>
        }
    </h2>

    <p class="text-muted mb-4">
        We're sorry for the inconvenience. Please try again later or contact support if the problem persists.
    </p>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-house"></i> Go to Homepage
        </a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Go Back
        </a>
    </div>
</div>