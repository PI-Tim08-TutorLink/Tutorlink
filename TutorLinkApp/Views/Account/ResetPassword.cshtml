@model TutorLinkApp.VM.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Token" />

    <div class="mb-3">
        <label class="form-label">New password</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">
        Reset password
    </button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger mt-2">@error.ErrorMessage</div>
}
