@model TutorLinkApp.Models.TutorCardViewModel

@{
    ViewData["Title"] = "Tutor Details";
}

<h2 class="mb-4">Tutor Details</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4>@Html.DisplayFor(m => m.FullName) (@Html.DisplayFor(m => m.Username))</h4>
        <p class="text-muted">@Html.DisplayFor(m => m.Email)</p>
        <hr />
        <p><strong>Skills:</strong> @(Model.Skills.Count > 0 ? Html.Encode(string.Join(", ", Model.Skills)) : "N/A")</p>
        <p><strong>Hourly rate:</strong> @(Model.HourlyRate.HasValue ? Html.Encode(Model.HourlyRate + " €") : "Not specified")</p>
        <p><strong>Average rating:</strong> @(Model.AverageRating.HasValue ? Html.Encode(Model.AverageRating + "/5") : "No reviews")</p>
        <p><strong>Total reviews:</strong> @Html.DisplayFor(m => m.TotalReviews)</p>

        @if (!string.IsNullOrWhiteSpace(Model.Bio))
        {
            <p><strong>Bio:</strong><br />@Html.DisplayFor(m => m.Bio)</p>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Availability))
        {
            <p><strong>Availability:</strong><br />@Html.DisplayFor(m => m.Availability)</p>
        }

        <a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>
    </div>
</div>
