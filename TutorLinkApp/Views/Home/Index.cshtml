@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TutorLink</h1>
    <p class="lead">Connect with expert tutors and enhance your learning experience</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Find a Tutor</h5>
                <p class="card-text">Browse our database of qualified tutors and find the perfect match for your learning needs.</p>
                <a asp-controller="Tutor" asp-action="Index" class="btn btn-primary">Browse Tutors</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Become a Tutor</h5>
                <p class="card-text">Share your knowledge and help students achieve their academic goals.</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register as Tutor</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Join as Student</h5>
                <p class="card-text">Create your account and start your learning journey today.</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register as Student</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h2 class="text-center mb-4">How It Works</h2>
    </div>
    <div class="col-md-3 text-center">
        <div class="mb-3">
            <span class="badge bg-primary rounded-circle p-3" style="font-size: 1.5rem;">1</span>
        </div>
        <h5>Create Account</h5>
        <p>Sign up as a student or tutor</p>
    </div>
    <div class="col-md-3 text-center">
        <div class="mb-3">
            <span class="badge bg-primary rounded-circle p-3" style="font-size: 1.5rem;">2</span>
        </div>
        <h5>Browse Tutors</h5>
        <p>Find tutors with the skills you need</p>
    </div>
    <div class="col-md-3 text-center">
        <div class="mb-3">
            <span class="badge bg-primary rounded-circle p-3" style="font-size: 1.5rem;">3</span>
        </div>
        <h5>Connect</h5>
        <p>Reach out to your chosen tutor</p>
    </div>
    <div class="col-md-3 text-center">
        <div class="mb-3">
            <span class="badge bg-primary rounded-circle p-3" style="font-size: 1.5rem;">4</span>
        </div>
        <h5>Start Learning</h5>
        <p>Begin your educational journey</p>
    </div>
</div>