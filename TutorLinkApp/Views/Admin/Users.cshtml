@model IEnumerable<TutorLinkApp.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-success">Create New User</a>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            string roleName;
            string badgeClass;

            switch (user.RoleId)
            {
                case 1:
                    roleName = "Admin";
                    badgeClass = "bg-danger";
                    break;
                case 3:
                    roleName = "Tutor";
                    badgeClass = "bg-success";
                    break;
                default:
                    roleName = "Student";
                    badgeClass = "bg-primary";
                    break;
            }

            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <span class="badge @badgeClass">@roleName</span>

                    @if (user.Tutors.Any(t => t.DeletedAt == null))
                    {
                        <span class="badge bg-info">Has Tutor Profile</span>
                    }
                </td>
                <td>@user.CreatedAt</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
